<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <Button
            android:id="@+id/endAlarmBtn"
            android:layout_width="347dp"
            android:layout_height="81dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#CF1742"
            android:text="STOP ALARM"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/panicBt"
            android:layout_width="303dp"
            android:layout_height="309dp"
            android:layout_marginTop="208dp"
            android:background="@drawable/gradient_drawable"
            android:text="PANIC"
            android:textSize="55sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/mapsBt"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF9800"
            android:text="Plan My Trip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="235dp"
            android:layout_height="32dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/alarmChoice"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alarmChoice"
            android:layout_width="107dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="112dp"
            android:gravity="center"
            android:text="Alarm Type:"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>