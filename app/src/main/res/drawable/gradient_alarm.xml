<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
        <item>
                <shape android:shape="oval" >
                        <gradient
                            android:startColor = "#9E0404"
                            android:centerColor = "#9E0404"
                            android:endColor = "#9E0404"
                            android:angle="360"
                            android:type = "linear" />
                        <size android:width="100dp"
                            android:height="100dp"/>
                </shape>
        </item>
        <item android:bottom="20dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp">
                <shape>
                        <corners android:bottomLeftRadius="100dp"
                            android:bottomRightRadius="100dp"/>
                        <gradient
                            android:startColor = "#9E0404"
                            android:centerColor = "#9E0404"
                            android:endColor = "#D61361"
                            android:angle="90"
                            android:type = "linear" />
                <size android:width="250dp"
                    android:height="100dp"
                    android:topLeftRadius="100dp"/>


        </shape>
        </item>
        <item android:bottom="50dp"
            android:left="0dp"
            android:right="0dp"
            android:top="10dp">
                <shape android:shape="oval" >
                        <gradient
                            android:startColor = "#9E0404"
                            android:centerColor = "#9E0404"
                            android:endColor = "#D61361"
                            android:angle="90"
                            android:type = "linear" />
                        <size android:width="100dp"
                            android:height="100dp"/>
                </shape>
        </item>

</layer-list>